#bindcode $mod+40 exec "rofi -modi drun,run -show drun -show-icons"
bindsym $mod+space exec "rofi -modi drun,run -show drun -show-icons"
bindsym $mod+d exec "rofi -show window -config $rofi_theme -show-icons"

