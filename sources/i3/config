# Screenshot
bindsym --release Print exec gnome-screenshot --interactive

# Or i3blocks (the 10 in RTMIN+10 must be the same as the signal defined in i3blocks config)
set $refresh_i3status pkill -RTMIN+10 i3blocks
set $notify_volume ~/.config/i3/scripts/notify-volume.sh
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 10%+ && $refresh_i3status && $notify_volume
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 10%- && $refresh_i3status && $notify_volume
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_SINK@ toggle && $refresh_i3status && $notify_volume
bindsym XF86AudioMicMute exec --no-startup-id wpctl set-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Adjust screen brightness
set $notify_brightness ~/.config/i3/scripts/notify-brightness.sh
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%- && $notify_brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 10%+ && $notify_brightness

# Toggle between current/last workspace with WIN+.
bindsym $mod+period workspace back_and_forth

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Shift+q kill

# Toggle show/hide bar
bindsym $mod+i bar mode toggle

# start dmenu (a program launcher)
#bindsym $mod+d exec --no-startup-id dmenu_run
